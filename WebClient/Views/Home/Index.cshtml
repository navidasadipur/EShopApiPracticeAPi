@model List<Customer>

@{
    ViewData["Title"] = "Home Page";
    int rowCount = 1;
}

<h2>
    <a href="#" class="btn btn-success">Create New Customer</a>
</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Family</th>
        <th>Email</th>
        <th>Phone</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@rowCount</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>
                <a href="#" class="btn btn-warning">Edit</a>
                <a href="#" class="btn btn-danger">Delet</a>
            </td>
        </tr>
        rowCount++;
    }
</table>
